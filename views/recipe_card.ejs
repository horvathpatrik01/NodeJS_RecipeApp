    <div class="card h-100">
        <a href=<%="/recipe/details/" + recipeDetails.id %>>
            <img src=<%= recipeDetails.image %> class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title"><%= recipeDetails.title %></h5>
                <p class="card-text"><%= recipeDetails.text %></p>
            </div>
            <div class="card-footer">
                <small class="text-body-secondary">Published â€¢ <%= recipeDetails.published %></small>
            </div>
