<div class="col-lg-4 col-md-6 col">
    <div class="card h-100 d-flex ">
        <a href="<%='/recipe/details/' + recipeDetails._id %>" class="d-flex flex-column flex-fill">
                <img src="<%= recipeDetails.image %>" class="card-img-top" alt="...">
                <div class="card-body flex-grow-1">
                    <h5 class="card-title"><%= recipeDetails.name %></h5>
                    <p class="card-text"><%= recipeDetails.text %></p>
                </div>
                <div class="flex-grow-1"></div>
                <div class="card-footer mt-auto mb-0">
                    <% if (typeof recipeDetails.publishedBy === 'undefined') { %>
                        <small class="text-body-secondary">Published â€¢ <%= recipeDetails.published %></small>
                    <% } else { %>
                        <small class="text-body-secondary">Published by <%= recipeDetails.publishedBy %>, <%= recipeDetails.published %></small>
                    <% } %>
                </div>
        </a>
            <% if (typeof userId !== 'undefined') { %>
                <div class="card-buttons">
                    <% if (typeof deleteOnly !== 'undefined' && deleteOnly) { %>
                        <a href="<%='/recipe/saved/del/' + recipeDetails._id +'/'+ userId %>">
                            <button class="delete-button option-button"><i class="bi bi-trash-fill"></i></button>
                        </a>
                    <% } else { %>
                        <a href="<%='/recipe/edit/' + recipeDetails._id +'/'+ userId %>">
                            <button class="edit-button option-button"><i class="bi bi-pencil-fill"></i></button>
                        </a>
                        <a href="<%='/recipe/del/' + recipeDetails._id +'/'+ userId %>">
                            <button class="delete-button option-button"><i class="bi bi-trash-fill"></i></button>
                        </a>
                    <% }%>
                </div>
            <% } %>
    </div>
</div>